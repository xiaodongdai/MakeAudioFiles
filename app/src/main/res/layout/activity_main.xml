<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiaodongdai.makeaudiofiles.MainActivity">
    <EditText
        android:id="@+id/plain_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:text="hello world, I am robot"/>
    <EditText
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose voice:"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input" />
    <Spinner
        android:id="@+id/voices_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input"
        app:layout_constraintLeft_toRightOf="@+id/label1"
        android:text="Choose Voice"/>
    <Button
        android:id="@+id/tryBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Try Me"
        app:layout_constraintTop_toBottomOf="@+id/voices_spinner" />
    <Button
        android:id="@+id/makefilesBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Make wav files"
        app:layout_constraintTop_toBottomOf="@+id/voices_spinner"
        app:layout_constraintLeft_toRightOf="@+id/tryBtn" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
